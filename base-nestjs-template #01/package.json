{
  "name": "starter-12-factor-app",
  "version": "2.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./src/main.ts",
    "start:debug": "nodemon",
    "tsc": "tsc",
    "build:prod": "npm run build",
    "start:prod": "node dist/src/main.js",
    "build": "tsc",
    "clean": "rimraf dist/",
    "test:unit": "DOTENV_CONFIG_PATH=./env.test mocha -r ts-node/register -r dotenv/config \"src/**/*.spec.ts\" --exit",
    "test:e2e": "DOTENV_CONFIG_PATH=./env.test mocha -r ts-node/register -r dotenv/config \"test/**/*.e2e-spec.ts\" --exit --timeout 10000",
    "test": "npm run test:unit && npm run test:e2e",
    "test:migration": "dotenv -e env.test --  typeorm migration:run",
    "pretest": "npm run test:migration",
    "cover": "npm run cover:unit && npm run cover:report",
    "cover:unit": "nyc --silent npm run test:unit",
    "cover:integration": "nyc --silent --no-clean npm run test:e2e",
    "cover:report": "nyc report --reporter=lcov --reporter=text-summary",
    "lint": "eslint '**/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./ormconfig.ts",
    "db:drop": "npm run typeorm:cli schema:drop",
    "db:migration:generate": "typeorm migration:create -n",
    "db:create": "ts-node src/scripts/create-database.ts",
    "db:revert": "npm run typeorm:cli migration:revert",
    "db:sync": "npm run typeorm:cli schema:sync",
    "db:migration:run": "typeorm migration:run -t each",
    "test:jest": "jest",
    "pretest:jest": "npm run test:migration",
    "test:jest:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:jest:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.5.5",
    "@nestjs/typeorm": "^7.0.0",
    "@types/sinon": "^10.0.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.0-rc.0",
    "dotenv": "^6.2.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.30.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "moment": "^2.25.3",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "sinon": "^11.1.1",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.22",
    "url-join-ts": "^1.0.5",
    "winston": "^3.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.3.1",
    "@types/chai-spies": "^1.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.171",
    "@types/node": "^10.17.18",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^8.3.1",
    "chai": "^4.3.4",
    "chai-spies": "^1.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "tslint-sonarts": "^1.9.0",
    "typescript": "3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
